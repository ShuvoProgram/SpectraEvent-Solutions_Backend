// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           String     @id @default(uuid())
    firstName    String
    middleName   String
    lastName     String
    profileImage String
    email        String     @unique
    password     String
    role         USER_ROLES @default(customer)
    contactNo    String
    gender       GENDER
    bloodGroup   String
    address      String
    createdAt    DateTime   @default(now())
    updatedAt    DateTime   @updatedAt
    booking      Booking[]
    Review       Review[]

    @@map("users")
}

model Service {
    id          String   @id @default(uuid())
    title       String
    category    String
    description String
    location    String
    price       Int
    serviceImg  String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    Review      Review[]
}

model Booking {
    id        String        @id @default(uuid())
    userId    String
    serviceId String
    date      DateTime
    status    BookingStatus @default(pending)
    user      User          @relation(fields: [userId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("bookings")
}

model Review {
    id        String   @id @default(uuid())
    userId    String
    serviceId String
    rating    String
    comment   String
    user      User     @relation(fields: [userId], references: [id])
    service   Service  @relation(fields: [serviceId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum USER_ROLES {
    super_admin
    admin
    customer
}

enum GENDER {
    male
    female
}

enum BookingStatus {
    pending
    delivered
}
